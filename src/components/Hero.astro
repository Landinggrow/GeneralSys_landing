---
// Importa el componente del icono
import IconMoveRight from "./icon/IconMoveRight.astro";

// Año actual
const year = new Date().getFullYear();

// Logos de empresas
const companyLogos = [
  { name: "Girasol", src: "/image/LogoGirasol.png", alt: "Girasol Logo" },
  { name: "SacsMype", src: "/image/LogoSacs.png", alt: "SacsMype Logo" },
  { name: "FirmEasy", src: "/image/LogoFirm.png", alt: "FirmEasy Logo" },
  { name: "LogoAguas", src: "/image/LogoAguas.png", alt: "FirmEasy Logo" },
  {
    name: "LogoAtachagua",
    src: "/image/LogoAtachagua.png",
    alt: "FirmEasy Logo",
  },
  {
    name: "LogoAtachaguaSel",
    src: "/image/LogoAtachaguaselva.png",
    alt: "FirmEasy Logo",
  },
  { name: "LogoYunga", src: "/image/LogoYunga.png", alt: "FirmEasy Logo" },
  {
    name: "LogoRealHotel",
    src: "/image/LogoRealHotel.png",
    alt: "FirmEasy Logo",
  },
];
---

<section
  id="Inicio"
  class="relative overflow-hidden bg-gradient-to-br from-[#f8f9fa] to-[#e9f6ff] py-20 md:py-28 mt-20"
>
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute -top-24 -right-24 h-96 w-96 rounded-full bg-[#2b8dcc]/10"
    >
    </div>
    <div
      class="absolute top-1/2 -left-24 h-64 w-64 rounded-full bg-[#112f59]/5"
    >
    </div>
    <div
      class="absolute bottom-0 right-1/4 h-80 w-80 rounded-full bg-[#2b8dcc]/5"
    >
    </div>
  </div>

  <div class="container relative px-4 md:px-6 mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
      <!-- Text Content -->
      <div class="lg:col-span-7 space-y-8">
        <div
          class="inline-flex items-center gap-2 rounded-full bg-[#112f59] px-4 py-1.5 text-sm font-medium text-white"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="absolute inline-flex h-full w-full animate-ping rounded-full bg-[#2b8dcc] opacity-75"
            ></span>
            <span class="relative inline-flex h-2 w-2 rounded-full bg-[#2b8dcc]"
            ></span>
          </span>
          Innovación Tecnológica
        </div>

        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-[#112f59] leading-none"
        >
          Transformamos ideas en <br />
          <span class="relative">
            <span class="relative z-10 text-[#2b8dcc]"
              >soluciones digitales</span
            >
            <span
              class="absolute bottom-2 left-0 z-0 h-3 w-full bg-[#2b8dcc]/20"
            ></span>
          </span>
        </h1>

        <p
          class="text-lg text-gray-600 md:text-xl max-w-[600px] leading-relaxed"
        >
          Desarrollamos tecnología personalizada que impulsa el crecimiento de
          tu empresa.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a
            target="_blank"
            rel="noopener noreferrer"
            href="https://wa.me/51935289770?text=Hola%2C%20me%20interesa%20conocer%20m%C3%A1s%20sobre%20las%20soluciones%20de%20software%20que%20ofrece%20General%20System%20para%20mi%20empresa.%20%C2%BFPodr%C3%ADan%20brindarme%20m%C3%A1s%20informaci%C3%B3n%3F."
            class="bg-[#112f59] hover:bg-[#0a1c36] text-white px-8 py-6 text-lg rounded-lg shadow-lg flex items-center gap-2"
          >
            Solicita tu diagnóstico
            <IconMoveRight />
          </a>
          <a
            href="/#Nosotros"
            class="border border-[#2b8dcc] text-[#2b8dcc] hover:bg-[#2b8dcc]/10 px-8 py-6 text-lg rounded-lg"
          >
            Conoce más
          </a>
        </div>
      </div>

      <!-- Logo Section -->
      <div class="lg:col-span-5 relative">
        <div
          class="relative bg-white rounded-2xl shadow-2xl p-8 overflow-hidden mx-auto max-w-md lg:max-w-none"
        >
          <div
            class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-[#112f59] to-[#2b8dcc]"
          >
          </div>
          <div class="flex justify-center items-center mb-6">
            <img
              src="/image/LogoHero.png"
              alt="General System SAS Logo"
              width="280"
              height="280"
              class="object-contain"
            />
          </div>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <div class="h-3 w-3 rounded-full bg-green-500"></div>
              <span class="text-sm font-medium text-[#112f59]">
                100% Personalizado
              </span>
            </div>
            <div class="flex items-center gap-2">
              <div class="h-3 w-3 rounded-full bg-[#2b8dcc]"></div>
              <span class="text-sm font-medium text-[#112f59]">
                Soporte Continuo
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Clients Section -->
    <div class="mt-16 pt-8 border-t border-gray-200">
      <p class="text-lg text-center text-gray-500 mb-6">
        Empresas que confían en nosotros
      </p>
      <div class="flex flex-wrap justify-center items-center gap-8 opacity-70">
        {
          companyLogos.map((logo) => (
            <div class="flex justify-center items-center bg-white rounded-[12px] py-1 px-2">
              <img
                src={logo.src}
                alt={logo.alt}
                class="h-12 w-auto object-contain"
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
